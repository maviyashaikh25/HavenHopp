<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center">
  <div class="container mt-5 col-md-6 col-lg-4 cardbox p-4 shadow rounded">
    <h2 class="mb-4 text-center">Login</h2>

    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">
          Username &nbsp; <i class="fa-solid fa-user"></i>
        </label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter your username.</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">
          Password &nbsp;<i class="fa-solid fa-lock"></i>
        </label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
        />
        <div class="valid-feedback">Password entered!</div>
        <div class="invalid-feedback">Please enter your password.</div>
      </div>

      <button type="submit" class="btn btn-primary w-100 lgbtn">Login</button>
    </form>
  </div>
</div>

<script>
  (() => {
    "use strict";

    const forms = document.querySelectorAll(".needs-validation");

    Array.from(forms).forEach((form) => {
      form.addEventListener(
        "submit",
        (event) => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
