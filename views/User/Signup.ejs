<% layout("/layouts/boilerplate") %>

<div class="d-flex justify-content-center align-items-start mt-4">
  <div class="container col-md-4 cardbox p-4 shadow rounded mt-4">
    <h2 class="mb-4 text-center">Sign Up</h2>

    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">
          Username &nbsp;<i class="fa-solid fa-user"></i>
        </label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter your username.</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">
          Email &nbsp;<i class="fa-solid fa-envelope"></i>
        </label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          required
        />
        <div class="valid-feedback">Email looks valid!</div>
        <div class="invalid-feedback">Please enter a valid email.</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">
          Password &nbsp;<i class="fa-solid fa-lock"></i>
        </label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
        />
        <div class="valid-feedback">Password entered!</div>
        <div class="invalid-feedback">Please enter your password.</div>
      </div>

      <button type="submit" class="btn btn-danger w-100 rounded-pill">
        Sign Up
      </button>

      <div class="text-center mt-3">
        Already a member? <a href="/login" class="text-danger">Login</a>
      </div>
    </form>
  </div>
</div>

<!-- Bootstrap Validation Script -->
<script>
  (() => {
    "use strict";
    const forms = document.querySelectorAll(".needs-validation");
    Array.from(forms).forEach((form) => {
      form.addEventListener(
        "submit",
        (event) => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>

<style>
  body {
    background-color: #f9f9f9;
  }

  .cardbox {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .btn-danger {
    background-color: #ff4d4d;
    border: none;
    transition: all 0.3s ease;
  }

  .btn-danger:hover {
    background-color: #ff3333;
    transform: translateY(-2px);
  }

  .form-control {
    border-radius: 6px;
  }

  .form-label i {
    color: #555;
  }

  .text-danger {
    text-decoration: none;
  }

  .text-danger:hover {
    text-decoration: underline;
  }
</style>
